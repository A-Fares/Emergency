<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:padding="24dp"
    android:paddingHorizontal="40dp"
    tools:context=".fragments.signup.SignUpFragment">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark" />

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lemonada_semibold"
        android:text="@string/app_name"
        android:textColor="@color/purple_500"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_icon" />

    <Button
        android:id="@+id/user_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightMediumGray"
        android:drawableEnd="@drawable/ic_user"
        android:fontFamily="@font/katibeh"
        android:padding="10dp"
        android:text="مستخدم"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_tv" />

    <Button
        android:id="@+id/paramedic_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightMediumGray"
        android:drawableEnd="@drawable/ic_paramedic"
        android:fontFamily="@font/katibeh"
        android:padding="10dp"
        android:text="مسعف"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/user_btn"
        app:layout_constraintStart_toStartOf="@+id/user_btn"
        app:layout_constraintTop_toBottomOf="@+id/user_btn" />

    <Button
        android:id="@+id/firefighter_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightMediumGray"
        android:drawableEnd="@drawable/ic_firefighter"
        android:fontFamily="@font/katibeh"
        android:padding="10dp"
        android:text="@string/firefighter"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/paramedic_btn"
        app:layout_constraintStart_toStartOf="@+id/paramedic_btn"
        app:layout_constraintTop_toBottomOf="@+id/paramedic_btn"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>